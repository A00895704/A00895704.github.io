
div.addForm
    form(action="/artistList/add" method="post")
        ul
            input(type="text" name="name" placeholder="Artist Name" class="add" id="addName" required)
            input(type="text" name="about" class="add" placeholder="About Artist" id="addAbout" required)
            input(type="text" name="url" class="add" placeholder="Image URL" id="addURL" required)
            button#addArtist(type="submit") Add

if artists.length > 0
    div#divArtists
        ul#artistList
            each artist in artists
                include artist-box.pug

